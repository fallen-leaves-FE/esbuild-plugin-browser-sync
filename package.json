{
  "name": "esbuild-plugin-browser-sync",
  "version": "1.0.0",
  "description": "基于browser-sync的esbuild本地开发服务Plugin",
  "main": "index.js",
  "module": "index.esm.js",
  "types": "types/index.d.ts",
  "files": [
    "types",
    "index.js",
    "index.esm.js"
  ],
  "scripts": {
    "build:cjs": "esbuild src/index.ts --platform=node --format=cjs --outfile=index.js",
    "build:esm": "esbuild src/index.ts --platform=node --format=esm --outfile=index.esm.js"
  },
  "exports": {
    ".": {
      "require": "./index.js",
      "import": "./index.esm.js"
    }
  },
  "keywords": [
    "esbuild",
    "esbuild-plugin",
    "esbuild plugin",
    "esbuild http",
    "esbuild server",
    "server",
    "browser-sync"
  ],
  "author": "fallen_leaves",
  "license": "ISC",
  "peerDependencies": {
    "@types/browser-sync": "^2.26.3",
    "browser-sync": "^2.27.10"
  },
  "devDependencies": {
    "@types/browser-sync": "^2.26.3",
    "@types/node": "^18.7.15",
    "browser-sync": "^2.27.10",
    "esbuild": "^0.15.7",
    "typescript": "^4.8.2"
  }
}
